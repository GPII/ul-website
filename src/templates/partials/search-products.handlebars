<!-- TODO: Migrate this to a "content aware" part of the API when this feature is complete:  https://github.com/GPII/gpii-express/pull/6 -->
{{#if pagedProducts.length}}
  {{#each pagedProducts}}
    <div class="row">
        <div class="column medium-4 small-12 search-product">
          <a href="/api/product/{{source}}/{{sid}}">{{name}}</a>
        </div>
        <div class="column medium-8 small-12">
            <div class="search-product-description">{{{description}}}</div>
        </div>
    </div>
  {{/each}}
{{else}}
  <p>No products found.  Please update your search terms.</p>
{{/if}}
