<div class="row">
    <div class="column medium-6 small-12">
      <h3>{{#if product.name}}{{product.name}}{{else}}No Product Name Listed{{/if}}</h3>
    </div>
    <div class="column medium-6 small-12">
      Status: {{product.status}}
    </div>
</div>

<div class="panel">
  <h3>Description</h3>

  {{{product.description}}}
</div>

<h3>Manufacturer</h3>

{{>product-manufacturer-view product.manufacturer}}

{{#equals product.source "unified"}}
    {{#if product.sources}}
      <h3>Sources</h3>

      {{>product-sources-view product}}
  {{/if}}
{{else}}
  <p><a href="/api/product/unified/{{product.uid}}">View the unified record related to this product.</a></p>
{{/equals}}

<div class="row product-edit-control-panel" style="display:none;">
    <div class="column medium-offset-9 medium-3 small-12 right">
        <button class="product-toggle expand button">Edit Record</button>
    </div>
</div>


<div class="row product-suggest-control-panel" style="display:none;">
  <div class="column medium-offset-9 medium-3 small-12 right">
    {{#if user}}
      <a href="/contribute?uid={{product.uid}}" class="button expand">Contribute a Change</a>
    {{else}}
      <a href="/api/user/login" class="button expand">Log in to Contribute a Change</a>
    {{/if}}
  </div>
</div>
